extends layout

block head
  script(src='javascripts/dev.js' crossorigin='anonymous')

block content
  div(class='pure-g')
    div(id='errors' class='pure-u-1')

  div(class='pure-g')
    div(class='pure-u-2-5')
      form(class='pure-form pure-form-aligned')
        
        fieldset
          h2 Start a Game
          div(class='pure-control-group')
            label(for='width') Width
            input(id='width' type='text' value='15')
          div(class='pure-control-group')
            label(for='height') Height
            input(id='height' type='text' value='15')
          div(class='pure-control-group')
            label(for='food') Food
            input(id='food' type='text' value='10')

          div
            fieldset(class='snake-group')
              legend Snake 1
              div(class='pure-control-group')
                label(for='snake-name-1' class='snake-name-label') Snake Name
                input(id='snake-name-1' class='snake-name' type='text')
              div(class='pure-control-group')
                label(for='snake-url-1' class='snake-url-label') Snake URL
                input(id='snake-url-1' class='snake-url' type='text')

          div(class='pure-controls')
            button(id='add-snake-btn' type='button' class='pure-button') Add Snake
            button(id='start-game-btn' type='button' class='pure-button pure-button-primary') Start Game
            
    div(class='pure-u-3-5')
      iframe(id="board" width='100%' height='600px' src='http://localhost:3009')